generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id   String @id @default(cuid()) @unique
  username String 
  email String 
  trips    Trip[]
}

model Trip {
  id   String @id @default(cuid()) @unique
  userId  String
  tripName String
  tripBudget String
  travelingWith String
  tripTypes  String[]
  user      User   @relation(fields: [userId], references: [id])

  Point Point[]
}

model Point {
  id             String   @id @default(cuid())
  tripId         String
  role           PointRole
  index          Int

  // for POINT role
  placeName      String?
  placeAddress   String?
  placeId        String?
  placeLat       Float?
  placeLng       Float?
  startDate      DateTime?
  endDate        DateTime?

  // for MOVING_BOX role
  fromName       String?
  fromAddress    String?
  fromPlaceId    String?
  fromLat        Float?
  fromLng        Float?

  toName         String?
  toAddress      String?
  toPlaceId      String?
  toLat          Float?
  toLng          Float?

  transportType  String?
  departureDate  DateTime?
  departureTime  DateTime?

   places         Place[]

  // relation
  trip           Trip      @relation(fields: [tripId], references: [id])

}

enum PointRole {
  POINT
  MOVING_BOX
}

model Place {
  internalId Int @id @default(autoincrement())  // primary key
  id String    
  pointId    String

  placeType  PlaceType
  name       String

  stayFrom   DateTime?
  stayUntil DateTime?

  cost       Float?
  notes      String?

  visitDate  DateTime?
  visitTime  DateTime?

  // ===== Relations =====
  point      Point      @relation(fields: [pointId], references: [id])

  @@unique([pointId, id])
  @@index([pointId])
}

enum PlaceType {
  ACCOMMODATION
  PLACE_TO_VISIT
}


model PlaceAffiliateLink {
  id           Int      @id @default(autoincrement())
  place_id     String   @unique
  affiliate_url String
  source       String?
  clicks       Int      @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

